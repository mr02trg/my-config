[user]
	name = Tue
	email = manhtuetruong@gmail.com

[core] 
	editor = vim
	excludesfile = /Users/itue/.gitignore_global

[color]
	ui = true
	diff = auto
	status = auto
	branch = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green 

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
	untracked = red

[alias]
	a = add
	aa = add --all
	b = branch
	bd = branch -d
	cm = commit -m
	co = checkout
	cob = checkout -b
	d = diff --unified=15
	diffw = diff --ignore-space-change
	la = log --graph --decorate --pretty=oneline --abbrev-commit --all
	rb = rebase
	rbc = rebase --continue
	ss = status
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
